{
  "name": "@repo/api",
  "type": "module",
  "version": "1.0.0",
  "license": "MIT",
  "imports": {
    "#api/*": "./src/*.ts"
  },
  "exports": {
    "./*": {
      "types": "./src/*.ts",
      "default": "./dist/*.js"
    }
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node ./dist/src/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "npm run lint --fix",
    "test": "cross-env NODE_ENV=test vitest",
    "build": "tsc -b",
    "build:vercel": "node build.mjs"
  },
  "dependencies": {
    "@hono/node-server": "^1.18.1",
    "@hono/zod-openapi": "^1.0.2",
    "@libsql/client": "^0.15.10",
    "@repo/common": "workspace:*",
    "@scalar/hono-api-reference": "^0.9.13",
    "dotenv": "^17.2.1",
    "dotenv-expand": "^12.0.2",
    "drizzle-orm": "^0.44.4",
    "drizzle-zod": "^0.8.2",
    "hono": "^4.8.12",
    "hono-pino": "^0.10.1",
    "pino": "^9.7.0",
    "pino-pretty": "^13.1.1",
    "stoker": "2.0.1",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.1.0",
    "@repo/common": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^24.2.0",
    "cross-env": "^10.0.0",
    "drizzle-kit": "^0.31.4",
    "esbuild": "^0.24.2",
    "eslint": "^9.32.0",
    "eslint-plugin-format": "^1.0.1",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.1"
  }
}
